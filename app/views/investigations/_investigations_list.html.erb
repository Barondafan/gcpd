<h4>Investigations in GCPD</h4>

<table class="striped highlight">
  <% if @open_investigations.empty? %>
    <p>No open cases at this time</p>
  <% else %>
  <thead>
    <th>Title</th>
    <th>Date open</th>
  </thead>
  <% for investigation in @open_investigations %>
    <tr>
      <td><%= investigation.title %></td>
      <td><%= investigation.date_opened.strftime('%m/%d/%y') %></td>
    </tr>
  <% end %>
</table>
<br />
<% unless @open_investigations.nil? %>
<%= will_paginate @open_investigations, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<% end %>
<p>&nbsp;</p>
<% end %>